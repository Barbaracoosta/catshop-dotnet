@page
@model IndexModel

<div class="row justify-content-md-center">

    @foreach (var artefato in Model.ArtefatoFelinos)
    {
        <div class="card col-3 m-3">
            <img src="@artefato.Imagem" class="p-3" style="border-radius: 25px">
            <div class="card-body">
                <h5 class="card-title">@artefato.Nome</h5>
                <p class="card-text">R$ @artefato.Preco</p>
                <p class="card-text">@artefato.Descricao</p>
                <a class="btn btn-primary" asp-page="/Detalhes" 
                asp-page-handler="/Details"
                asp-route-slug="@artefato.NomeSlug"
                asp-route-id="@artefato.ArtefatoFelinoId">Ver mais</a>
            </div>
        </div>
    }
            
</div>
